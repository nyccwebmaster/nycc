function mss_get_perms($db = 'dev') {
  //$origdb = db_set_active($db);
  $a = array();
  $sql = "SELECT name, perm FROM $db.permission p, $db.role r WHERE p.rid=r.rid";
  $q = db_query($sql);
  while ($r = db_fetch_object($q)) {
    $perm = explode(",", $r->perm);
